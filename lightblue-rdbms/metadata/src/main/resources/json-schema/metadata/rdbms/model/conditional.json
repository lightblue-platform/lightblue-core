    "id": "#conditional",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "$or": {
            "description": "Match any",
            "type": "array",
            "minItems": 2,
            "items": {
                "$ref": "if.json#/definitions/if"
            }
        },
        "$any": {
            "description": "Match any of these conditions.",
            "$ref": "#/properties/$or"
        },
        "$and": {
            "description": "Match all of these conditions.",
            "$ref": "#/properties/$or"
        },
        "$all": {
            "description": "Match all of these conditions.",
            "$ref": "#/properties/$and"
        },
        "$not": {
            "description": "Charge the evaluation from true to false vice versa",
            "$ref": "if.json#/definitions/if"
        },
        "$field-empty": {
            "type": "object",
            "properties": {
                "field": {
                    "type": "string"
                }
            },
            "required": [
                "field"
            ],
            "additionalProperties": false
        },
        "$field-check-field": {
            "type": "object",
            "properties": {
                "op": {
                    "$ref": "comparison.json#"
                },
                "field": {
                    "type": "string"
                },
                "rfield": {
                    "type": "string"
                }
            },
            "required": [
                "op",
                "field",
                "rfield"
            ],
            "additionalProperties": false
        },
        "$field-check-value": {
            "type": "object",
            "properties": {
                "op": {
                    "$ref": "comparison.json#"
                },
                "field": {
                    "type": "string"
                },
                "value": {
                    "type": "string"
                }
            },
            "required": [
                "op",
                "field",
                "value"
            ],
            "additionalProperties": false
        },
        "$field-check-values": {
            "type": "object",
            "properties": {
                "op": {
                    "$ref": "comparison.json#"
                },
                "field": {
                    "type": "string"
                },
                "values": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string"
                    },
                    "uniqueItems": true
                }
            },
            "required": [
                "op",
                "field",
                "values"
            ],
            "additionalProperties": false
        },
        "$field-regex": {
            "type": "object",
            "properties": {
                "field": {
                    "type": "string"
                },
                "regex": {
                    "type": "string",
                    "format": "regex"
                },
                "caseInsensitive": {
                    "type": "boolean"
                },
                "multiline": {
                    "type": "boolean"
                },
                "extended": {
                    "type": "boolean"
                },
                "dotall": {
                    "type": "boolean"
                }
            },
            "required": [
                "field",
                "regex"
            ],
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}
