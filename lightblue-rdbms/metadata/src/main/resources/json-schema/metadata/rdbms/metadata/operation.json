    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "id": "operation",
    "properties": {
        "bindings": {
            "type": "object",
            "properties": {
                "in": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "column": {
                                "type": "string"
                            },
                            "path": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "column",
                            "path"
                        ],
                        "additionalProperties": false
                    }
                },
                "out": {
                    "$ref": "#/properties/bindings/in"
                }
            }
        },
        "expressions": {
            "type": "array",
            "minItems": 1,
            "items": {
                "oneOf": [
                    {
                        "type": "object",
                        "properties": {
                            "$statement": {
                                "type": "object",
                                "id": "statement",
                                "properties": {
                                    "datasource": {
                                        "type": "string",
                                        "id": "datasource"
                                    },
                                    "sql": {
                                        "type": "string",
                                        "id": "sql"
                                    },
                                    "type": {
                                        "id": "type",
                                        "enum": [
                                            "select",
                                            "insert",
                                            "update",
                                            "delete",
                                            "call"
                                        ]
                                    }
                                },
                                "required": [
                                    "sql",
                                    "type"
                                ],
                                "additionalProperties": false
                            }
                        }
                    },
                    {
                        "type": "object",
                        "properties": {
                            "$if": {
                                "$ref": "if.json#/definitions/if"
                            },
                            "$then": {
                                "oneOf": [
                                    {
                                        "$ref": "#/properties/expressions"
                                    },
                                    {
                                        "enum": [
                                            "$fail",
                                            "$continue",
                                            "$break"
                                        ]
                                    }
                                ]
                            },
                            "$elseIf": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "$if": {
                                            "$ref": "if.json#/definitions/if"
                                        },
                                        "$then": {
                                            "oneOf": [
                                                {
                                                    "$ref": "#/properties/expressions"
                                                },
                                                {
                                                    "enum": [
                                                        "$fail",
                                                        "$continue",
                                                        "$break"
                                                    ]
                                                }
                                            ]
                                        }
                                    }
                                }
                            },
                            "$else": {
                                "oneOf": [
                                    {
                                        "$ref": "#/properties/expressions"
                                    },
                                    {
                                        "enum": [
                                            "$fail",
                                            "$continue",
                                            "$break"
                                        ]
                                    }
                                ]
                            }
                        },
                        "required": [
                            "$if",
                            "$then"
                        ],
                        "additionalProperties": false
                    },
                    {
                        "type": "object",
                        "properties": {
                            "$foreach": {
                                "type": "object",
                                "properties": {
                                    "iterateOverPath": {
                                        "description": "Iterate for each value of the given path (which can be a variable or an entity's field)",
                                        "type": "string"
                                    },
                                    "expressions": {
                                        "$ref": "#/properties/expressions"
                                    }
                                },
                                "required": [
                                    "iterateOverPath",
                                    "expressions"
                                ],
                                "additionalProperties": false
                            }
                        },
                        "required": [
                            "$foreach"
                        ],
                        "additionalProperties": false
                    },
                    {
                        "type": "object",
                        "properties": {
                            "$for": {
                                "type": "object",
                                "properties": {
                                    "loopTimes": {
                                        "type": "number"
                                    },
                                    "loopCounterVariableName": {
                                        "type": "string"
                                    },
                                    "expressions": {
                                        "$ref": "#/properties/expressions"
                                    },
                                    "required": [
                                        "loopTimes",
                                        "loopCounterVariableName",
                                        "expressions"
                                    ],
                                    "additionalProperties": false
                                }
                            }
                        },
                        "required": [
                            "$for"
                        ],
                        "additionalProperties": false
                    }
                ]
            }
        }
    },
    "required": [
        "expressions"
    ],
    "additionalProperties": false
}